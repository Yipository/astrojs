const platform = {
  gmail: "gmail",
  github: "github",
  twitter: "twitter",
  instagram: "instagram",
  facebook: "facebook",
  linkedin: "linkedin",
  youtube: "youtube",
  reddit: "reddit",
  tiktok: "tiktok",
